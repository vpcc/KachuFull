<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="avsa.icsteamb.kachufull.PlayActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="214dp"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="104dp"
            android:id="@+id/card1" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="104dp"
            android:id="@+id/card2" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="104dp"
            android:id="@+id/card3" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="104dp"
            android:id="@+id/card4" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="104dp"
            android:id="@+id/card5"
            android:layout_alignBottom="@+id/imageButton" />
    </LinearLayout>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/aiPlayer1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/aiPlayer2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/aiPlayer3"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:id="@+id/trumpDisplay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/aiText1"
        android:layout_above="@+id/aiPlayer1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/trumpDisplay"
        android:layout_alignEnd="@+id/trumpDisplay"
        android:textSize="15sp"
        android:layout_below="@+id/aiPlayer2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/aiText2"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/aiPlayer2"
        android:layout_toEndOf="@+id/aiPlayer2"
        android:layout_alignBottom="@+id/aiPlayer2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/aiText3"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/aiPlayer3"
        android:layout_toLeftOf="@+id/aiPlayer3"
        android:layout_toStartOf="@+id/aiPlayer3"
        android:layout_alignTop="@+id/aiPlayer3" />


</RelativeLayout>